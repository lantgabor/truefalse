<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
  <children>
      <Pane prefWidth="938.0">
         <children>
            <Label id="text" fx:id="text" alignment="CENTER" contentDisplay="CENTER" layoutY="1.0" text="label">
               <padding>
                  <Insets bottom="100.0" left="30.0" right="30.0" top="100.0" />
               </padding>
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Pane>
      <Pane>
         <children>
            <HBox spacing="50.0">
               <children>
                  <Button id="igaz" fx:id="igaz" mnemonicParsing="false" onAction="#igazAction" text="Igaz" />
                  <Button id="hamis" fx:id="hamis" mnemonicParsing="false" onAction="#hamisAction" text="Hamis" />
                  <Button id="next" fx:id="next" mnemonicParsing="false" onAction="#nextAction" text="Next" />
                  <Label id="score" fx:id="score" text="Label" />
                  <Button mnemonicParsing="false" text="Reset" onAction="#reset"/>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </Pane>
  </children>
</VBox>
